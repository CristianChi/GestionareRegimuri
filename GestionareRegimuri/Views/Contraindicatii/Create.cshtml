@model GestionareRegimuri.ViewModels.ContraindicatiiViewModel

@{ ViewData["Title"] = "Creare Contraindicatii"; }

<h1>Creare</h1>

<h4>Contraindicatie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Contraindicatii" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="AlimentID" type="hidden" />
            <div class="form-group">
                <label asp-for="Boala" class="control-label"></label>
                <input asp-for="Boala" class="form-control" />
                <span asp-validation-for="Boala" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Motiv" class="control-label"></label>
                <input asp-for="Motiv" class="form-control" />
                <span asp-validation-for="Motiv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-action="Index">Index</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
