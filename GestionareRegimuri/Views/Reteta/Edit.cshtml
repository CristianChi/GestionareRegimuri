@model GestionareRegimuri.ViewModels.RetetaViewModel

@{ ViewData["Title"] = "Editare Reteta"; }


<h1>Editare</h1>

<h4>Reteta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RetetaID" />
            <div class="form-group">
                <label asp-for="RetetaNume" class="control-label"> Nume rețetă</label>
                <input asp-for="RetetaNume" class="form-control" />
                <span asp-validation-for="RetetaNume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Boli" class="control-label">Boli indicate</label>
                <input asp-for="Boli" class="form-control" />
                <span asp-validation-for="Boli" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Link" class="control-label"></label>
                <input asp-for="Link" class="form-control" />
                <span asp-validation-for="Link" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <button asp-action="Delete" class="btn btn-primary" asp-route-id="@Context.Request.Query["id"]">Sterge</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Anulare</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
