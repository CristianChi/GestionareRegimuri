@model GestionareRegimuri.ViewModels.MesajViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Mesaj</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ForumID" />
            <div class="form-group">
                <label asp-for="MesajScris" class="control-label"></label>
                <input asp-for="MesajScris" class="form-control" />
                <span asp-validation-for="MesajScris" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Forum" asp-action="Index">Inapoi</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
