@page
@model LoginModel

@{
    ViewData["Title"] = "Autentificare";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                    <br>
                    <label asp-for="Input.Username">Nume de utilizator</label>
                    <input asp-for="Input.Username" class="form-control" />
                </div>
                <div class="form-group">
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                    <br>
                    <label asp-for="Input.Password">Parolă</label>
                    <input asp-for="Input.Password" class="form-control" />
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            Retineti datele de autentificare.
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Autentificare</button>
                </div>
                <div class="form-group">
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Nu aveți cont? Creați unul aici.</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
