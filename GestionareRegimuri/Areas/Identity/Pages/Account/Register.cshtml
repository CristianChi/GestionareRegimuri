@page
@model RegisterModel
@{
    ViewData["Title"] = "Înregistrare";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Creare cont nou.</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <span asp-validation-for="Input.Email" class="text-danger"></span>
                <br>
                <label asp-for="Input.Email"> Adresa de E-mail</label>
                <input asp-for="Input.Email" class="form-control" />
            </div>
            <div class="form-group">
                <span asp-validation-for="Input.Username" class="text-danger"></span>
                <br>
                <label asp-for="Input.Username">Nume de utilizator</label>
                <input asp-for="Input.Username" class="form-control" />
            </div>
            <div class="form-group">
                <span asp-validation-for="Input.Password" class="text-danger"></span>
                <br>
                <label asp-for="Input.Password"> Parolă</label>
                <input asp-for="Input.Password" class="form-control" />
            </div>
            <div class="form-group">
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                <br>
                <label asp-for="Input.ConfirmPassword">Confirmare parolă</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
            </div>
            <div class="form-group">
                <span asp-validation-for="Input.Name" class="text-danger"></span>
                <br>
                <label asp-for="Input.Name">Nume</label>
                <input asp-for="Input.Name" class="form-control" />
            </div>
            <div class="form-group">
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                <br>
                <label asp-for="Input.PhoneNumber">Număr de telefon</label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">Înregistrare</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
